<h1>New Users</h1>
<hr>
<%= form_for @user do |f| %>	
	<div class="form-group">
		<%= f.text_field :email, placeholder: "Email", autofocus: true, class: "form-control"%>
	</div>
	<div class="form-group"> 
		<%= f.text_field :password, placeholder: "Password", class:"form-control" %>
	</div>
		<%= f.submit "Save User", class: "btn btn-block btn-default"%>
<% end %>